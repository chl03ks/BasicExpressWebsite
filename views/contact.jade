extends layout

block content
    .container
        form(action="contact/send", method="post")
            h1 Contact
            .form-group
                label Name
                input.form-control(type="text", name="name", value="", placeholder="Name")
            .form-group
                label Email
                input.form-control(type="email", name="email", value="", placeholder="Email")
            .form-group
                label Message
                textarea.form-control(name="message", rows="8", cols="40", placeholder="Enter Message...")
            button.btn.btn-default(type="submit")  Submit
                
                
            
            
            
            
